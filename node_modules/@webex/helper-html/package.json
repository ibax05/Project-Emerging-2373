{
  "name": "@webex/helper-html",
  "version": "2.59.8",
  "description": "HTML Utiltities",
  "license": "MIT",
  "main": "dist/index.js",
  "devMain": "src/index.js",
  "repository": {
    "type": "git",
    "url": "https://github.com/webex/webex-js-sdk.git",
    "directory": "packages/@webex/helper-html"
  },
  "engines": {
    "node": ">=14"
  },
  "browser": {
    "./dist/html.js": "./dist/html.shim.js",
    "./src/html.js": "./src/html.shim.js"
  },
  "browserify": {
    "transform": [
      "babelify",
      "envify"
    ]
  },
  "devDependencies": {
    "@babel/core": "^7.17.10",
    "@webex/babel-config-legacy": "2.59.8",
    "@webex/eslint-config-legacy": "2.59.8",
    "@webex/jest-config-legacy": "2.59.8",
    "@webex/legacy-tools": "2.59.8",
    "@webex/test-helper-chai": "2.59.8",
    "@webex/test-helper-mocha": "2.59.8",
    "@webex/test-helper-mock-webex": "2.59.8",
    "@webex/test-helper-test-users": "2.59.8",
    "eslint": "^8.24.0",
    "prettier": "^2.7.1"
  },
  "dependencies": {
    "lodash": "^4.17.21"
  },
  "scripts": {
    "build": "yarn build:src",
    "build:src": "webex-legacy-tools build -dest \"./dist\" -src \"./src\" -js -ts -maps",
    "test": "yarn test:style && yarn test:unit && yarn test:integration && yarn test:browser",
    "test:browser": "webex-legacy-tools test --integration --unit --runner karma",
    "test:integration": "webex-legacy-tools test --integration --runner mocha",
    "test:style": "eslint ./src/**/*.*",
    "test:unit": "webex-legacy-tools test --unit --runner jest"
  }
}
